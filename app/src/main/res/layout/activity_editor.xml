<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/activityMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorActivity">
    <ImageView
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:id="@+id/EditorPetImageView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/itemMargin"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/petNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        android:textSize="@dimen/defaultTextSize"
        android:layout_marginBottom="@dimen/itemMargin"
        android:text="Name :"
        app:layout_constraintTop_toBottomOf="@id/EditorPetImageView"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/nameEditTExt"
        android:inputType="text"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        android:hint="Enter Pet Name Here..."
        android:layout_marginBottom="@dimen/itemMargin"
        app:layout_constraintTop_toBottomOf="@id/EditorPetImageView"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/genderTextView"
        android:layout_marginBottom="@dimen/itemMargin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        android:textSize="@dimen/defaultTextSize"
        android:text="Gender :"
        app:layout_constraintTop_toBottomOf="@id/petNameTextView"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        app:layout_constraintTop_toBottomOf="@id/nameEditTExt"
        app:layout_constraintRight_toRightOf="parent"
        tools:listitem="ajfdoj"/>
    <TextView
        android:id="@+id/breedTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        android:layout_marginBottom="@dimen/itemMargin"
        android:text="Breed :"
        android:textSize="@dimen/defaultTextSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genderTextView"/>
    <EditText
        android:id="@+id/breedEditText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        android:layout_marginBottom="@dimen/itemMargin"
        android:hint="Enter Breed Here..."
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genderSpinner"/>
    <TextView
    android:id="@+id/weightTextView"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/EditorTExtLaoutHeight"
    android:layout_marginBottom="@dimen/itemMargin"
    android:text="Name :"
    android:textSize="@dimen/defaultTextSize"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/breedTextView"/>
    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        android:layout_marginBottom="@dimen/itemMargin"
        android:hint="Enter Weight Here..."
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breedEditText"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>