<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginBottom="@dimen/itemMargin"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/petImageView"/>
    <TextView
        android:id="@+id/petTextViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/defaultTextSize"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/itemMargin"
        tools:text="JUDO piece of shit"
        app:layout_constraintTop_toBottomOf="@id/petImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/petGenderTextViewMain"
        android:layout_width="match_parent"
        android:textSize="@dimen/defaultTextSize"
        android:gravity="center_vertical"
        android:layout_height="@dimen/EditorTExtLaoutHeight"
        app:layout_constraintTop_toBottomOf="@id/petTextViewMain"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="i am male"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/petTextViewMain"
        app:layout_constraintBottom_toBottomOf="@id/petTextViewMain"
        app:layout_constraintRight_toRightOf="@id/petTextViewMain"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_marginStart="@dimen/activityMargin"/>

</androidx.constraintlayout.widget.ConstraintLayout>